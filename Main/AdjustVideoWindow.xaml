<Window x:Class="ShowWrite.Views.AdjustVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="画面调节" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#2b2b2b">
    <StackPanel Margin="10">
        <TextBlock Text="亮度" Foreground="White" Margin="0,5"/>
        <Slider x:Name="BrightnessSlider" Minimum="-100" Maximum="100" TickFrequency="1" ValueChanged="BrightnessSlider_ValueChanged"/>

        <TextBlock Text="对比度" Foreground="White" Margin="0,10,0,5"/>
        <Slider x:Name="ContrastSlider" Minimum="0.1" Maximum="3" TickFrequency="0.1" ValueChanged="ContrastSlider_ValueChanged"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="确定" Width="80" Margin="5" Click="OK_Click"/>
            <Button Content="取消" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
