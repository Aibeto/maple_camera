<Window x:Class="ShowWrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="ShowWrite视频展台"
        WindowState="Maximized"
        Background="#2B2B2B"
        WindowStyle="None"
        MouseWheel="Window_MouseWheel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 视频与墨迹 -->
        <Grid Grid.Row="0"
              ClipToBounds="True"
              IsManipulationEnabled="True"
              ManipulationStarting="VideoArea_ManipulationStarting"
              ManipulationDelta="VideoArea_ManipulationDelta"
              MouseDown="VideoArea_MouseDown"
              MouseMove="VideoArea_MouseMove"
              MouseUp="VideoArea_MouseUp">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1" />
                    <TranslateTransform x:Name="PanTransform" X="0" Y="0" />
                </TransformGroup>
            </Grid.RenderTransform>
            <Image x:Name="VideoImage" Stretch="Uniform" />
            <InkCanvas x:Name="Ink" Background="Transparent" />
        </Grid>

        <!-- 底部主菜单 -->
        <DockPanel Grid.Row="1" Background="#2C3E50" LastChildFill="True">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

                <!-- 移动 / 画笔 / 橡皮擦 -->
                <ToggleButton x:Name="MoveBtn" Click="MoveBtn_Click" Margin="5" Width="90" Height="40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="icons/move.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="移动" Foreground="White"/>
                    </StackPanel>
                </ToggleButton>

                <ToggleButton x:Name="PenBtn" Click="PenBtn_Click" Margin="5" Width="90" Height="40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="icons/pen.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="画笔" Foreground="White"/>
                    </StackPanel>
                </ToggleButton>

                <ToggleButton x:Name="EraserBtn" Click="EraserBtn_Click" Margin="5" Width="90" Height="40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="icons/eraser.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="橡皮擦" Foreground="White"/>
                    </StackPanel>
                </ToggleButton>

                <!-- 撤回 / 清屏 -->
                <Button Click="UndoInk_Click" Margin="5" Width="90" Height="40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="icons/undo.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="撤销" Foreground="White"/>
                    </StackPanel>
                </Button>

                <Button Click="ClearInk_Click" Margin="5" Width="90" Height="40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="icons/clear.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="清屏" Foreground="White"/>
                    </StackPanel>
                </Button>

                <!-- 拍照 / 照片 -->
                <Button Click="Capture_Click" Margin="5" Width="90" Height="40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="icons/capture.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="拍照" Foreground="White"/>
                    </StackPanel>
                </Button>

                <StackPanel>
                    <Button x:Name="PhotoBtn" Click="TogglePhotoPanel_Click" Margin="5" Width="90" Height="40">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="icons/save.png" Width="20" Height="20" Margin="0,0,5,0"/>
                            <TextBlock Text="照片" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    <Popup x:Name="PhotoTipPopup" PlacementTarget="{Binding ElementName=PhotoBtn}" Placement="Top" AllowsTransparency="True" StaysOpen="False">
                        <Border Background="#333" CornerRadius="4" Padding="5">
                            <TextBlock Text="已拍摄" Foreground="White" FontSize="14"/>
                        </Border>
                    </Popup>
                </StackPanel>

                <!-- 更多按钮（弹出菜单） -->
                <Menu>
                    <MenuItem Width="90" Height="49">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="icons/settings.png" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="更多" Foreground="White"/>
                            </StackPanel>
                        </MenuItem.Header>

                        <MenuItem Header="切换摄像头" Click="SwitchCamera_Click">
                            <MenuItem.Icon>
                                <Image Source="icons/switch_camera.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="画面调节" Click="OpenAdjustVideo_Click">
                            <MenuItem.Icon>
                                <Image Source="icons/startup_image.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="梯形校正" Click="OpenPerspectiveCorrection_Click">
                            <MenuItem.Icon>
                                <Image Source="icons/correction.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>

                        <MenuItem Header="退出" Click="Exit_Click">
                            <MenuItem.Icon>
                                <Image Source="icons/exit.png" Width="16" Height="16"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>

                <!-- 最小化 -->
                <Button Click="Minimize_Click" Margin="5" Width="90" Height="40">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="icons/minimize.png" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="最小化" Foreground="White"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </DockPanel>

        <!-- 照片悬浮窗 -->
        <Popup x:Name="PhotoPopup" PlacementTarget="{Binding ElementName=PhotoBtn}" Placement="Left" StaysOpen="False">
            <Border Width="400" Height="500" Background="#2C3E50" CornerRadius="6" BorderBrush="White" BorderThickness="1">
                <DockPanel>
                    <TextBlock Text="拍摄记录" Foreground="White" FontSize="16" FontWeight="Bold" Margin="10" DockPanel.Dock="Top"/>
                    <ListBox x:Name="PhotoList" SelectionChanged="PhotoList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="6">
                                    <Image Width="70" Height="52" Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                    <StackPanel Margin="10,0,0,0">
                                        <TextBlock Foreground="White" FontWeight="Bold" Text="{Binding Timestamp}" />
                                        <TextBlock Foreground="#DDDDDD" FontSize="12" Text="{Binding Strokes.Count, StringFormat='笔迹数: {0}'}" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- 底部按钮 -->
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <Button Click="BackToLive_Click" Margin="5" Width="90" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="icons/startup_image.png" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="返回实时" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Button Click="SaveImage_Click" Margin="5" Width="90" Height="40">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="icons/save.png" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="保存图片" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
