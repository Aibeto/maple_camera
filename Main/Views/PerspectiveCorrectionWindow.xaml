<Window x:Class="ShowWrite.Views.PerspectiveCorrectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="梯形校正" Height="650" Width="900" Background="#1E1E1E"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Canvas x:Name="ImageCanvas" Background="Black">
            <Image x:Name="PreviewImage"/>
            <!-- 四个可拖拽的角点 -->
            <Thumb x:Name="Point0" Width="12" Height="12" Background="Red" DragDelta="Point_DragDelta"/>
            <Thumb x:Name="Point1" Width="12" Height="12" Background="Red" DragDelta="Point_DragDelta"/>
            <Thumb x:Name="Point2" Width="12" Height="12" Background="Red" DragDelta="Point_DragDelta"/>
            <Thumb x:Name="Point3" Width="12" Height="12" Background="Red" DragDelta="Point_DragDelta"/>
        </Canvas>

        <!-- 底部按钮栏 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="8">
            <Button Content="校正" Click="Correct_Click" Margin="4"/>
            <Button Content="保存并关闭" Click="SaveAndClose_Click" Margin="4"/>
            <Button Content="取消" Click="Cancel_Click" Margin="4"/>
        </StackPanel>
    </Grid>
</Window>
